<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <com.kingja.supershapeview.view.SuperShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:super_cornerRadius="4dp"
            app:super_solidColor="@color/white_hi"
            app:super_strokeColor="@color/gray_hi"
            app:super_strokeWidth="1px">

            <com.kingja.yaluji.view.StringTextView
                android:id="@+id/tv_subject"
                style="@style/font_3_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="雁荡山风景区"/>


            <View style="@style/div_hor_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游客"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_tourists"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="张三 18888888888"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="使用限期"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_useDate"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="2018-10-11至2018-12-11"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="领券时间"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_paidAt"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="2018-07-22"/>
                </LinearLayout>
            </LinearLayout>

            <com.kingja.supershapeview.view.SuperShapeLinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:super_cornerRadius="6dp"
                app:super_solidColor="@color/bg_hi">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="订单号"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_orderNo"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="25145214"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="验证码"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_ticketcode"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="154dsf"/>

                </LinearLayout>


            </com.kingja.supershapeview.view.SuperShapeLinearLayout>

            <com.kingja.supershapeview.view.SuperShapeRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:padding="16dp"
                app:super_cornerRadius="4dp"
                app:super_solidColor="@color/white_hi"
                app:super_strokeColor="@color/gray_hi"
                app:super_strokeWidth="1px">

                <ImageView
                    android:id="@+id/iv_qcodeImg"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"/>
            </com.kingja.supershapeview.view.SuperShapeRelativeLayout>
        </com.kingja.supershapeview.view.SuperShapeLinearLayout>


    </LinearLayout>
</ScrollView>