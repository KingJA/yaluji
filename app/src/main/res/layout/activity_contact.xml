<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:background="@mipmap/bg_phone"
            android:id="@+id/ll_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">

            <TextView
                style="@style/font_f_14"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专属客服电话:0577-88755877"/>

            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/sstv_accept"
                style="@style/font_orange_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="拨打"/>

        </LinearLayout>

        <TextView
            style="@style/font_9_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间:周一至周六 9:00-18:00"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_version"
        style="@style/font_9_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="12dp"
        android:text=""/>
</RelativeLayout>