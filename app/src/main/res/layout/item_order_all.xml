<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="12dp">

    <RelativeLayout
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："/>
            <TextView
                android:id="@+id/tv_order_orderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25462115"/>
        </LinearLayout>



        <TextView
            android:id="@+id/tv_order_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="乐清市雁荡镇"/>
    </RelativeLayout>

    <View style="@style/div_hor_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_order_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_order_title"
                        style="@style/font_3_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雁荡山灵石"/>
                    <TextView
                        android:id="@+id/tv_order_status"
                        android:visibility="gone"
                        style="@style/font_3_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="待使用"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出游时间："/>

                        <TextView
                            android:id="@+id/tv_order_date"
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-02-22"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"/>

                        <TextView
                            android:id="@+id/tv_order_payamount"
                            style="@style/font_6_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="58"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量："/>

                    <TextView
                        android:id="@+id/tv_order_quantity"
                        style="@style/font_6_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张"/>

                </LinearLayout>


                <com.kingja.supershapeview.view.SuperShapeTextView
                    android:id="@+id/stv_order_detail"
                    style="@style/font_f_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="6dp"
                    android:text="查看券码"
                    app:super_solidColor="@color/red_hi"
                    app:super_strokeWidth="1dp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_order_stamp"
            android:layout_alignParentRight="true"
            android:layout_width="98dp"
            android:layout_height="78dp"/>
    </RelativeLayout>




</LinearLayout>