<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_hi"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@mipmap/bg_mine_top">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="24dp">

            <ImageView
                android:id="@+id/iv_mine_msg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:background="@mipmap/ic_msg_light"/>

            <TextView
                android:visibility="gone"
                style="@style/font_f_10"
                android:id="@+id/tv_msgCount"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_circle_red"
                android:gravity="center"
                android:text="99"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_mine_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_mine_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_nickname"
                style="@style/font_f_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册/登录"/>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_personal"
        style="@style/Padding_20_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/ic_mine_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"/>


        </LinearLayout>

        <ImageView style="@style/Arrow_Right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_mine_visitor"
        style="@style/Padding_20_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/ic_mine_visitor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游客信息"/>


        </LinearLayout>

        <ImageView style="@style/Arrow_Right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_mine_password"
        style="@style/Padding_20_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/ic_mine_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码设置"/>


        </LinearLayout>

        <ImageView style="@style/Arrow_Right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_mine_contract"
        style="@style/Padding_20_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/ic_mine_contract"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系我们"/>


        </LinearLayout>

        <ImageView style="@style/Arrow_Right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_mine_business"
        style="@style/Padding_20_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/ic_mine_business"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要合作"/>


        </LinearLayout>

        <ImageView style="@style/Arrow_Right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_mine_feedback"
        style="@style/Padding_20_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/ic_mine_feedback"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要反馈"/>


        </LinearLayout>

        <ImageView style="@style/Arrow_Right"/>

    </RelativeLayout>
    <View style="@style/div_hor_gray"/>

    <TextView
        android:id="@+id/tv_quit"
        style="@style/font_orange_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/white_hi"
        android:gravity="center"
        android:padding="12dp"
        android:text="退出登录"
        android:visibility="visible"/>


</LinearLayout>