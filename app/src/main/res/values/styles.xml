    <style name="Padding_20_12">
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@color/white_hi</item>
    </style>

    <style name="Arrow_Right" parent="Arrow">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Arrow">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@mipmap/ic_arrow_right</item>
    </style>

    <style name="Action_Button">
        <item name="android:background">@drawable/shape_button_action</item>
        <item name="android:textColor">@color/white_hi</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Forbidden_Button">
        <item name="android:background">@drawable/shape_button_forbiden</item>
        <item name="android:textColor">@color/c_9</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Et_3_15">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/c_3</item>
        <item name="android:hint">@color/c_c</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Padding_12_12">
        <item name="android:background">@color/white_hi</item>
        <item name="android:padding">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Et_3_13">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/c_3</item>
        <item name="android:hint">@color/c_c</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Padding_16">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_hi</item>
    </style>

    <style name="KProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/pb_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="Dialog_R16_ORANGE" parent="Dialog_BASE">
        <item name="android:windowBackground">@drawable/shape_r16_orange</item>
    </style>

    <style name="Dialog_R8_WHITE" parent="Dialog_BASE">
        <item name="android:windowBackground">@drawable/shape_r8_white</item>
    </style>

    <style name="Dialog_BASE" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
