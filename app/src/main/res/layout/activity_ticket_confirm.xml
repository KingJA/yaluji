<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <com.kingja.supershapeview.view.SuperShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:super_cornerRadius="4dp"
            app:super_solidColor="@color/white_hi"
            app:super_strokeColor="@color/gray_hi"
            app:super_strokeWidth="1px">

            <com.kingja.yaluji.view.StringTextView
                android:id="@+id/tv_subject"
                style="@style/font_3_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="雁荡山风景区"/>


            <View style="@style/div_hor_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游客"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_tourists"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="张三 18888888888"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="数量"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_quantity"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="2张"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="门市价"/>

                    <com.kingja.yaluji.view.DeleteTextView
                        android:id="@+id/tv_marketPrice"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="0元"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="抵用金额"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_payamount"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="抵用0元/张"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="使用限期"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_useDate"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="2018-10-11至2018-12-11"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="使用方式"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_visitMethod"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="景区售票窗口直接抵扣"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="抵用说明"/>

                    <com.kingja.yaluji.view.StringTextView
                        android:id="@+id/tv_useRemarks"
                        style="@style/font_6_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="抢购3小时后生效"/>
                </LinearLayout>

            </LinearLayout>

        </com.kingja.supershapeview.view.SuperShapeLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:background="@mipmap/ic_tip"/>

            <TextView
                style="@style/font_orange_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限量资源，无需求请勿领取"/>
        </LinearLayout>
        <!--按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/stv_confirm"
                style="@style/font_f_13"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_above="@id/stv_provider"
                android:layout_gravity="end"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="确认领取"
                app:super_cornerRadius="18dp"
                app:super_solidColor="@color/orange_hi"/>

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/stv_cancel"
                style="@style/font_f_13"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_above="@id/stv_provider"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="取消领取"
                app:super_cornerRadius="18dp"
                app:super_solidColor="@color/green_hi"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>